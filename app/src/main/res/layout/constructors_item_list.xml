<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/constructor_item_flag"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="4dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/constructor_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/constructor_item_flag"
        android:layout_alignTop="@id/constructor_item_flag"
        android:layout_toEndOf="@+id/constructor_item_flag"
        android:gravity="start|center_vertical"
        android:textAppearance="@style/TextAppearance.Large" />
</RelativeLayout>