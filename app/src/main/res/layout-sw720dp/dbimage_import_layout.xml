<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <com.gmail.fattazzo.formula1world.view.progressbar.ArcProgress
        android:id="@+id/dbimage_progressBar_arc"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        app:arc_bottom_text_size="@dimen/font_size_medium"
        app:arc_stroke_width="@dimen/font_size_small"
        app:arc_progress="0" />

    <!-- Seasons -->
    <CheckedTextView
        android:id="@+id/db_seasons_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/seasons"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Status -->
    <CheckedTextView
        android:id="@+id/db_status_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/status"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Circuits -->
    <CheckedTextView
        android:id="@+id/db_circuits_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/circuits"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Races -->
    <CheckedTextView
        android:id="@+id/db_races_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/races"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Constructors -->
    <CheckedTextView
        android:id="@+id/db_constructors_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/constructors"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Drivers -->
    <CheckedTextView
        android:id="@+id/db_drivers_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/drivers"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Constructor standings -->
    <CheckedTextView
        android:id="@+id/db_constructorStandings_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/constructorStandings"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Driver standings -->
    <CheckedTextView
        android:id="@+id/db_driverStandings_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/driverStandings"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Qualifying -->
    <CheckedTextView
        android:id="@+id/db_qualifying_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/qualifying"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Results -->
    <CheckedTextView
        android:id="@+id/db_results_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/results"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Pit stops -->
    <CheckedTextView
        android:id="@+id/db_pitstops_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/pitStops"
        android:textAppearance="@style/TextAppearance.Large" />

    <!-- Lap times -->
    <CheckedTextView
        android:id="@+id/db_laptimes_ctv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/lapTimes"
        android:textAppearance="@style/TextAppearance.Large" />

</LinearLayout>